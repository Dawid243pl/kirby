{
  "name": "@getkirby/panel",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run development -- --watch",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --disable-host-check --config=node_modules/laravel-mix/setup/webpack.config.js",
    "pre-commit": "pretty-quick --staged && npm run build",
    "test": "cypress run"
  },
  "dependencies": {
    "@linusborg/vue-simple-portal": "^0.1.4",
    "@inertiajs/inertia": "npm:inertia-light@0.1.11",
    "@inertiajs/inertia-vue": "^0.1.4",
    "autosize": "^4.0.2",
    "dayjs": "^1.9.3",
    "del": "^5.1.0",
    "npm": "^6.14.8",
    "vue": "^2.6.12",
    "vuedraggable": "^2.24.2",
    "vuelidate": "^0.6.2",
    "vuex": "^3.1.3",
    "vuex-i18n": "^1.13.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-wildcard": "^4.0.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.11.0",
    "laravel-mix": "^5.0.7",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.12"
  },
  "babel": {
    "presets": [
      [ "@vue/app", { "useBuiltIns": "entry" } ]
    ],
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 Android versions",
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Edge versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions",
    "last 2 iOS versions",
    "last 2 KaiOS versions",
    "last 2 Safari versions",
    "last 2 Samsung versions",
    "last 2 Opera versions",
    "last 2 OperaMobile versions",
    "last 2 UCAndroid versions"
  ]
}
